////////////////////////////////////////////////////////////////MAIN////////////////////////////////////////
void main ()
{
	int a,b,c, opcion, opcion2,opcion3,opcion4;
	string d,e,f,g;
	do {
		cout<<"               Menu";
		cout<<endl<<"1.-EXPOSICION"<<endl;
		cout<<"2.-CONFERENCIA"<<endl;
		cout<<"3.-RECORDATORIO"<<endl;
		cout<<"4.-LIBRE"<<endl;
		cout<<"0.-SALIR"<<endl;
		cout<<"SELECCIONE UNA OPCION"<<endl;
		cin>>opcion;
		switch(opcion) 
		{
		case 0:{ 
				system("cls");
				cout<<"adios"; 
			   }
			   break;
		case 1 :		{system("cls");
						cout<<"USTED HA SELECCIONADO EXPOSICION";
						cout<<endl<<"1.-CLASICA"<<endl;
						cout<<"2.-PROFESIONAL"<<endl;
						cout<<"3.-EXPERTO"<<endl;
						cout<<"4.-PERSONALIZADA"<<endl;
						cout<<"0.-SALIR"<<endl;
						cout<<"SELECCIONE UNA OPCION"<<endl;
						cin>>opcion2;
						menuclasica(opcion2);
						}
					break;


			case 2 :
					{system("cls");
						cout<<"USTED HA SELECCIONADO CONFERENCIA";
						cout<<endl<<"1.-CLASICA"<<endl;
						cout<<"2.-PROFESIONAL"<<endl;
						cout<<"3.-PERSONALIZADO"<<endl;
						cout<<"0.-SALIR"<<endl;
						cout<<"SELECCIONE UNA OPCION"<<endl;
						cin>>opcion2;
						menuconferencia(opcion2);
					}
						break;
			case 3 :
					{	system("cls");
						cout<<"USTED HA SELECCIONADO RECORDATORIO"<<endl;
						cout<<"1.-PROFESIONAL"<<endl;
						cout<<"2.-PERSONALIZADA"<<endl;
						cout<<"0.-SALIR"<<endl;
						cout<<"SELECCIONE UNA OPCION"<<endl;
						cin>>opcion3;
						menurecordatorio(opcion3);
					}
						break;
			case 4 :
					{	system("cls");
						cout<<"USTED HA SELECCIONADO LIBRE"<<endl;
						cout<<"1.-PERSONALIZADA"<<endl;
						cout<<"0.-SALIR"<<endl;
						cout<<"SELECCIONE UNA OPCION"<<endl;
						cin>>opcion4;
						menulibre(opcion4);
					}	
						break;
			default :cout<<"OPCION INVALIDA";break;
			} 
	}while (opcion !=0);
	getch ();
}
