void pause(int dur)
{
	int temp=time(NULL)+dur;
	while(temp>time(NULL));
}

void menuclasica(int op)
{
	switch(op) 
	{
	case 1 :					{		system("cls");cout<<endl<<"USTED HA SELECCIONADO CLASICA";
										string a,b,c,d,e;
									
										cout<<endl<<"Ingresar los siguietes datos  ";

										getline (cin, a);
										cout<<"INTRODUCCION:  ";
										getline (cin, a);
										cout<<"INGRESE LA IDEA PRINCIPAL:  ";
										getline (cin, b);
										cout<<"INGRESE LA IDEA SECUNDARIA:  ";
										getline (cin, c);
										cout<<"INGRESE EL PUNTO MAS IMPORTANTE:  ";
										getline (cin, d);
										cout<<"INGRESE OTRO PUNTO INFORMATIVO:  ";
										getline (cin, e);

										system("cls");
										cout<<"                          "<<a;getch();
										//pause(3);
										cout<<endl<<endl<<b;getch();
										//pause(3);
										cout<<endl<<endl<<c;getch();
										//pause(3);
										cout<<endl<<endl<<d;getch();
										//pause(3);
										cout<<endl<<endl<<e;getch();
										//pause(3);
										cout<<endl<<endl<<endl;
										system("Pause");
								}
										break;
	case 2:
		{
